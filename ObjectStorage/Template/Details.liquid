<table border="1">
        <thead>
        {% for property in Model.Class.Properties -%}
        
            <th>{{ property.Name }}</th>
      
        {% endfor -%}
        </thead>
        <tbody>
        {% for property in Model.Class.Properties -%}

                <td>{{ Model.Element[property.Name] }}</td>

        {% endfor -%}
                <td>
                    <a href="/entity/{{Model.Class.Name}}/{{Model.Element["Id"]}}">Edit</a>
                </td>
                <td>
                    <a href="/class/{{Model.Class.Name}}/delete/{{Model.Element["Id"]}}?redirectTo=/entity/{{Model.Class.Name}}/overview">Delete</a>
                </td>
        
        <form method="post" action="/class/{{Model.Class.Name}}?redirectTo=/entity/{{Model.Class.Name}}/overview">
        <tr>
        {% for property in Model.Class.Properties -%}
                        <td>
                            {% if Model.Options[property.Name] -%}
                                <select name="{{property.Name}}">
                                    {% for option in Model.Options[property.Name] -%}
                                        <option value="{{option.Id}}">{{option.Value}}</option>
                                    {% endfor -%}   
                                </select>
                            {% else -%}
                                <input type="text" name="{{property.Name}}" placeholder="{{property.Type}} value for {{property.Name}}"/>
                            {% endif -%}
                        </td>
        {% endfor -%}
                        <td>
                        <input type="submit"/>
                        </td>
        <form>
        </tbody>
</table>